@model The_Gift_of_the_Givers.ViewModels.DonationViewModel

<h1 class="text-center my-4" style="color: #007bff;">Donate Resources</h1>

<form asp-action="Donate" method="post" class="p-4 bg-light rounded shadow-sm" style="max-width: 500px; margin: 0 auto;">
    <div class="form-group">
        <label asp-for="DonationType" class="font-weight-bold" style="color: #007bff;"></label>
        <input asp-for="DonationType" class="form-control" placeholder="Type of Donation (e.g., Food, Water)" />
        <span asp-validation-for="DonationType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="font-weight-bold" style="color: #007bff;"></label>
        <input asp-for="Quantity" type="number" class="form-control" placeholder="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="font-weight-bold" style="color: #007bff;"></label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Additional Details (optional)"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonorName" class="font-weight-bold" style="color: #007bff;"></label>
        <input asp-for="DonorName" class="form-control" placeholder="Your Name" />
        <span asp-validation-for="DonorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonorEmail" class="font-weight-bold" style="color: #007bff;"></label>
        <input asp-for="DonorEmail" type="email" class="form-control" placeholder="Your Email" />
        <span asp-validation-for="DonorEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeliveryDate" class="font-weight-bold" style="color: #007bff;"></label>
        <input asp-for="DeliveryDate" type="date" class="form-control" />
        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block" style="background-color: #007bff; border-color: #007bff;">Donate</button>
</form>
