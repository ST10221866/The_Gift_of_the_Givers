@model The_Gift_of_the_Givers.ViewModels.AdminRegisterViewModel

@{
    ViewData["Title"] = "Admin Register";
}

<h2 class="text-center my-4" style="color: #28a745;">Admin Register</h2>

<form asp-action="Register" method="post" class="p-4 bg-light rounded shadow-sm" style="max-width: 400px; margin: 0 auto;">
    <div class="form-group">
        <label asp-for="Username" class="font-weight-bold" style="color: #28a745;"></label>
        <input asp-for="Username" class="form-control" placeholder="Choose a username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="font-weight-bold" style="color: #28a745;"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="font-weight-bold" style="color: #28a745;"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success btn-block" style="background-color: #28a745; border-color: #28a745;">Register</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
