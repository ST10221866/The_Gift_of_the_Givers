@model The_Gift_of_the_Givers.ViewModels.AdminLoginViewModel

@{
    ViewData["Title"] = "Admin Login";
}

<h2 class="text-center my-4" style="color: #28a745;">Admin Login</h2>

<form asp-action="Login" method="post" class="p-4 bg-light rounded shadow-sm" style="max-width: 400px; margin: 0 auto;">
    <div class="form-group">
        <label asp-for="Username" class="font-weight-bold" style="color: #28a745;"></label>
        <input asp-for="Username" class="form-control" placeholder="Enter your username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="font-weight-bold" style="color: #28a745;"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="text-center mt-3">
        <p>Don't have an account? <a href="@Url.Action("Register", "Admin")" style="color: #28a745;">Register here</a></p>
    </div>

    <button type="submit" class="btn btn-success btn-block" style="background-color: #28a745; border-color: #28a745;">Login</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
